{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.1.0.json",
    "title": {
        "text": "Registered Cars in Portugal",
        "color": "navy",
        "fontSize": 22,
        "align": "center",
        "anchor": "middle",
        "dy": -1,
        "baseline": "middle",
        "subtitle": "data from https://acap.pt/",
        "subtitleColor": "navy",
        "subtitleFontSize": 18,
        "subtitlePadding": 5
      },
      "width": 400,
      "height": 400,
      "data":{
        "url": "data/top10_CoB.CSV",
        "format":{ "type": "csv" }
      },
      "transform": [

            {
            "sort": [{"field": "Population", "order": "descending"}],
            "window": [{"op": "rank", "as": "rank"}],
            "groupby": ["Year"]
            },

            {
                "lookup": "Country",
                "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/melvinalex7/FIT3179/main/Assignment_2/data/flags.csv"
                },
                "key": "Country",
                "fields": ["ImageURL"]
                }
            }
        ],
        "encoding": {
            "x": {
                "field":"Year",
                "type":"ordinal",
                "sort":[
                    "2011",
                    "2016",
                    "2021"
                ]
            },
            "y": {
                "field":"rank",
                "type":"quantitative",
                "sort": "descending"
            }
        },
        "layer":[
                {
                    "mark": {"type": "line",
                    "point": {
                        "filled": false,
                        "fill": "white"
                      },
                      "interpolate":"cardinal"},
                    "encoding": {
                        "color": {"field": "Country"}
                    }
                },
                {
                    "mark": {"type": "image", "width": 35, "height": 18, "tooltip":true},
                    "transform": [
                        {
                            "lookup": "Country",
                            "from": {
                                "data": {
                                    "url": "data/top10_CoB.CSV",
                                    "format":{ "type": "csv" }
                                },
                                "key": "Country",
                                "fields": ["Population"]
                            }
                        }
            
                    ],
                    "encoding": {
                        "url": {"field": "ImageURL", "type": "nominal"},
                        "tooltip":[
                            {
                                "field":"Country", "type": "nominal"
                            },
                            {
                                "field":"Population", "type": "quantitative"
                            },
                            {
                                "field":"rank", "type": "quantitative"
                            }
                        ]
                    }
                    
                }
        ]
      
}